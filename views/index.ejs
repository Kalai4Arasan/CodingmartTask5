<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
<style>

#btbutton {
    position: fixed;
    bottom: 20px;
    right: 20px;
    }

.dropdown-menu > a:hover{
  color:white;
  background-color: steelblue;
}

@media screen and (min-device-width: 950px) {
    .center{
    display: block;
    margin-left: auto;
    margin-right: auto;
    width:60%;height:300px;
  }
}
@media screen and (min-device-width: 100px) and (max-device-width: 950px) {
      .center{
      display: block;
      margin-left: auto;
      margin-right: auto;
      width:60%;height:200px;
    }
    
}


</style>

</head>
<body style='font-family: Apercu, "Gill Sans MT", "Gill Sans", Arial, sans-serif;'>
    <div id="btbutton">
        <button style="background-color: yellowgreen;width:100px;border-radius: 20px;font-weight: bold;" class="chat btn text-white"><i class="fa fa-info-circle"></i> About</button>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/"><img src="/logo.png" height=50 width=50 style="border-radius: 10px;" alt=""> MovieBuzz</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link text-white" href="/">Home </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/movies">Movies </a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Categories
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="/movies/action">Action</a>
                <a class="dropdown-item" href="/movies/comedy">Comedy</a>
                <a class="dropdown-item" href="/movies/thriller">Thriller</a>
              </div>
            </li>
          </ul>
          <div class="btn-group mr-4">
            <% if(user.length==0){ %> 
              <button type="button" class="btn btn-sm btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-user-o ml-3" style="font-size: 150%;color:white"></i>
              </button>
            <div class="dropdown-menu mr-4">
              <a class="dropdown-item" href="/login">Login </a>
              <a class="dropdown-item" href="/signup">SingUp </a>
            </div>
          <% }else{ %> 
            <button type="button" class="btn btn-sm btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fa fa-user-o ml-3" style="font-size: 150%;color:white"> <small><%=user %></small> </i>
            </button>
            <div class="dropdown-menu mr-4">
              <a class="dropdown-item" href="/pages/bookings">My Bookings </a>
              <a class="dropdown-item" href="/auth/logout">Logout </a>
            </div>
          <% } %> 
          </div>
          <form class="form-inline my-2 my-lg-0 mr-2">
            <input class="form-control mr-sm-2" type="search" placeholder="Search Movies" aria-label="Search">
            <button class="btn btn-outline-light my-2 my-sm-0" type="submit"><i class="fa fa-search"></i></button>
          </form>
          
        </div>
      </nav>


<!--Carousel-->
<div id="carouselExampleControls" class="carousel slide mt-4" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active justify-content-center">
      <a href="/movie/show/8"><img class="center" src="/carousel1.jpg" alt="First slide"></a>
    </div>
    <div class="carousel-item">
      <a href="/movie/show/6"><img class="center" src="/caraousel2.jpg" alt="Second slide"></a>
    </div>
    <div class="carousel-item">
      <a href="/movie/show/9"><img class="center" src="/caraousel3.jpeg" alt="Third slide"></a>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class=" fa fa-angle-left text-dark"  style="font-size: 50px;font-weight: bolder;" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="fa fa-angle-right text-dark" style="font-size: 50px;font-weight: bolder;"  aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="row" style="margin-top: 4%;">
  <div class="col-md-2 "></div>
  <div class="col-md-9">
    <h1 class="">Top Movies</h1><hr>
    <% if( topmovies.length >0){%> 
    <div class="row mt-3">
    <% topmovies.forEach(item => {%>
      <div class="col-md-4 mt-3">
      <a href="/movie/show/<%=item.mid %> " class="text-dark text-decoration-none">
      <div class="card" style="width: 15rem;">
        <img class="card-img-top" height=350 src="/posters/<%=item.poster%>" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%=item.name%></h5>
          <p class="card-text"><%=item.description%></p>
          <p class="card-text">Rating: <% for(var i=1;i<=5;i++){%>
               <% if(i <= item.rating){%>
                  <i style="color:#FFD700" class="fa fa-star"></i>
               <% }else{ %>
                  <i style="color:#FFD700" class="fa fa-star-o"></i>
               <%}%>    
          <% } %>
          </p>
          <p>Rs: <%=item.pay %>/- </p>
          <a href="/register/<%=item.mid %> " class="btn btn-outline-primary">Book</a>
        </div>
      </a>
      </div>
    </div>
    <%});%>
  </div>
  <% }else{ %> 
      <h5>No Movies Found</h5>
  <% } %> 
  </div>
  </div>
  <div class="col-md-2"></div>
</div>



    
</body>
<script>
</script>

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</html>