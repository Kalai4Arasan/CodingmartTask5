<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Details</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <style>

        #btbutton {
            position: fixed;
            bottom: 20px;
            right: 20px;
            }
            .dropdown-menu > a:hover{
            color:white;
            background-color: steelblue;
            }
            @media screen and (min-device-width: 950px) {
                .center{
                display: block;
                margin-left: auto;
                margin-right: auto;
                width:30%;height:200px;
            }
            }
            @media screen and (min-device-width: 100px) and (max-device-width: 950px) {
                .center{
                display: block;
                margin-left: auto;
                margin-right: auto;
                width:40%;height:200px;
                }
                
            }
                    
        </style>
        
        </head>
        <body style='font-family: Apercu, "Gill Sans MT", "Gill Sans", Arial, sans-serif;'>
            <div id="btbutton">
                <button style="background-color: yellowgreen;width:100px;border-radius: 20px;font-weight: bold;" class="chat btn text-white"><i class="fa fa-info-circle"></i> About</button>
            </div>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand" href="/"><img src="/logo.png" height=50 width=50 style="border-radius: 10px;" alt=""> MovieBuzz</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
              
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                      <a class="nav-link text-white" href="/">Home </a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link text-white" href="/movies">Movies </a>
                    </li>
                    <li class="nav-item dropdown">
                      <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Categories
                      </a>
                      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/movies/action">Action</a>
                        <a class="dropdown-item" href="/movies/comedy">Comedy</a>
                        <a class="dropdown-item" href="/movies/thriller">Thriller</a>
                      </div>
                    </li>
                  </ul>
                  <div class="btn-group mr-4">
                    <% if(user.length==0){ %> 
                      <button type="button" class="btn btn-sm btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-user-o ml-3" style="font-size: 150%;color:white"></i>
                      </button>
                    <div class="dropdown-menu mr-4">
                      <a class="dropdown-item" href="/login">Login </a>
                      <a class="dropdown-item" href="/signup">SingUp </a>
                    </div>
                  <% }else{ %> 
                    <button type="button" class="btn btn-sm btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i class="fa fa-user-o ml-3" style="font-size: 150%;color:white"> <small><%=user %></small> </i>
                    </button>
                    <div class="dropdown-menu mr-4">
                      <a class="dropdown-item" href="/pages/bookings">My Bookings </a>
                      <a class="dropdown-item" href="/auth/logout">Logout </a>
                    </div>
                  <% } %> 
                  </div>
                  <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search Movies" aria-label="Search">
                    <button class="btn btn-outline-light my-2 my-sm-0" type="submit"><i class="fa fa-search"></i></button>
                  </form>
                </div>
              </nav>

              <div class="row mt-4">
                  <div class="col-md-2 "></div>
                  <div class="col-md-9">
                    <h1 class="text-center">Movies</h1><hr>
                    <% if( movie.length >0){%> 
                    <div class="row mt-3">
                    <% movie.forEach(item => {%>
                      <img class="center" src="/posters/<%=item.poster %> " alt="">

                      <table class="table mt-4 text-uppercase" style="border-color: white;">
                        <th>Details</th>
                        <th></th>
                        <th></th>
                          <tr>
                              <td>Name </td>
                              <td>:</td>
                              <td><%=item.name %> </td>
                          </tr>
                          <tr>
                              <td>Description </td>
                              <td>:</td>
                              <td><%=item.description %> </td>
                          </tr>
                          <tr>
                              <td>Category </td>
                              <td>:</td>
                              <td><%=item.category %> </td>
                          </tr>
                          <tr>
                              <td>Rating </td>
                              <td>:</td>
                              <td><% for(var i=1;i<=5;i++){%>
                                <% if(i <= item.rating){%>
                                   <i style="color:#FFD700" class="fa fa-star"></i>
                                <% }else{ %>
                                   <i style="color:#FFD700" class="fa fa-star-o"></i>
                                <%}%>    
                           <% } %></td>
                          </tr>
                          <tr>
                              <td>Rs</td>
                              <td>:</td>
                              <td> <%=item.pay %>/- </td>
                          </tr>
                      </table>
                    <a class="btn btn-primary" href="/register/<%=item.mid %> " style="margin-left: auto;margin-right:auto ;border-radius: 20px;width:10%;">Book</a>
                    <%});%>
                  </div>
                <% }else{ %>
                    <h5>No Movies Found</h5>
                <% } %> 
                  </div>
                  </div>
            
            <div class="row mt-4">
                <div class="col-md-2"></div>
                <div class="col-md-9">
                    <h5>Reviews <span><i id="ic1" class="fa fa-caret-down"></i></span></h5>
                    <hr>
                    <% if(review.length>0) {%> 
                    <ul class="list-group" >
                    <% review.forEach(item=>{%>
                        <li class="list-group-item" style="border: 1px solid white;"><%=item.review %> </li>
                    <%  }) %>  
                    </ul>
                    <% }else{ %>
                        <h5 class="text-center">No Reviews Found...</h5>
                    <% } %>  
                    <% if(user.length>0) {%> 
                    <button type="button" class="btn btn-info btn-sm float-right mt-4" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"></i> Add remark</button>
                    <% } %> 
                </div>
                <div class="col-md-2"></div>
            </div>

            <!-- Modal -->
            <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title">Review :</h6>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <% movie.forEach(item=>{%>
                    <form class="form" action="/task/addreview/<%=item.mid %> " method="post">
                    <%}) %> 
                        <textarea class="form-control" name="review" id="" required></textarea>
                        <input type="submit" class="btn btn-sm btn-outline-success mt-2 text-center" value="Add Review">
                    </form>
                </div>
                </div>

            </div>
            </div>

            
        </body>
</html>